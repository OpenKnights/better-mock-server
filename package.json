{
  "name": "better-mock-server",
  "version": "1.0.0-rc.3",
  "description": "A lightweight and fast mock server built on unjs/h3 for modern web development.",
  "type": "module",
  "keywords": [
    "mock",
    "mock server"
  ],
  "license": "MIT",
  "homepage": "https://github.com/OpenKnights/better-mock-server#readme",
  "bugs": {
    "url": "https://github.com/OpenKnights/better-mock-server/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OpenKnights/better-mock-server.git"
  },
  "author": "king-3 <w2196592083@gmail.com>",
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
