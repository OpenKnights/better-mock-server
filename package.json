  },
  "dependencies": {
    "h3": "2.0.1-rc.5"
  },
  "devDependencies": {
    "@king-3/eslint-config": "^2.0.0",
    "@king-3/play-tsx": "^1.3.0",
    "@king-3/prettier-config": "^1.0.2",
    "@types/node": "^24.5.2",
    "bumpp": "^10.2.3",
    "eslint": "^9.36.0",
    "prettier": "^3.6.2",
    "tsdown": "^0.16.4",
    "tsx": "^4.20.6",
    "vitest": "^3.2.4"
  }
